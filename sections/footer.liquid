<footer class="footer">
	<div class="footer-top">
		<div class="footer-top__container">
			<div class="footer-top__content">
				{% for link in linklists.footer.links %}
					{% assign link_handle = link.title | handleize %}
					<ul class="footer__links-list footer__{{ link_handle }}">
						<li class="column__title">
							{{ link.title }}
						</li>
						{% for child_link in link.links %}
							<li class="footer__list-item">
								<a href="{{ child_link.url }}" class="footer__item-link">
									{{ child_link.title }}
								</a>
							</li>
						{% endfor %}
					</ul>
				{% endfor %}
				<div class="footer__social">
					<h4 class="column__title">
						Follow Us
					</h4>
					<ul class="social__list">
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_facebook"></span>
							</a>
						</li>
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_twitter"></span>
							</a>
						</li>
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_instagram"></span>
							</a>
						</li>
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_pinterest"></span>
							</a>
						</li>
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_tumbrl"></span>
							</a>
						</li>
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_snapchat"></span>
							</a>
						</li>
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_youtube"></span>
							</a>
						</li>
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_vimeo"></span>
							</a>
						</li>
						<li class="footer__list-item">
							<a href="#" class="footer__item-link social-link">
								<span class="icon-footer_tiktok"></span>
							</a>
						</li>
					</ul>
				</div>
				<div class="footer__story">
					<h4 class="column__title">
						Our Story
					</h4>
					<p class="story__text">
						The brand is experimenting with design, which is reflected in new collections. The style of
						jewelry organically echoes fashion trends, emphasizing the trendy modern sound.
					</p>
				</div>
			</div>
		</div>
	</div>
	<div class="footer-bottom">
		<div class="footer-bottom__container">
			<div class="bottom__content">
				<div class="info-block currency">
					<button class="info-block__button currency__button">
						<span>United States (USA $)</span>
						<svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path
								d="M9.03939 0.217251C9.08632 0.16946 9.15021 0.142578 9.21686 0.142578C9.28351 0.142578 9.3474 0.16946 9.39433 0.217251L9.92425 0.752434C9.97258 0.798244 10 0.862204 10 0.929145C10 0.996086 9.97258 1.06005 9.92425 1.10586L5.32995 5.74579C5.2597 5.81682 5.1644 5.85678 5.06499 5.85686L4.93501 5.85686C4.8356 5.85678 4.7403 5.81682 4.67005 5.74579L0.0757474 1.10586C0.0274162 1.06005 -3.7308e-08 0.996086 -3.43819e-08 0.929144C-3.14558e-08 0.862203 0.0274162 0.798243 0.0757475 0.752433L0.605667 0.21725C0.652601 0.169459 0.716492 0.142578 0.78314 0.142578C0.84979 0.142578 0.913679 0.169459 0.960613 0.21725L5 4.29676L9.03939 0.217251Z"
								fill="currentColor" />
						</svg>
					</button>
					<ul class="info-block__dropdown currency__dropdown">
						<li class="dropdown__item active currency__item">
							<button>United States (USA $)</button>
						</li>
						<li class="dropdown__item currency__item">
							<button>Euro (EUR €)</button>
						</li>
						<li class="dropdown__item currency__item">
							<button>Hryvnia (UAH ₴)</button>
						</li>
					</ul>
				</div>
				<div class="info-block language">
					<button class="info-block__button language__button">
						<span>English</span>
						<svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path
								d="M9.03939 0.217251C9.08632 0.16946 9.15021 0.142578 9.21686 0.142578C9.28351 0.142578 9.3474 0.16946 9.39433 0.217251L9.92425 0.752434C9.97258 0.798244 10 0.862204 10 0.929145C10 0.996086 9.97258 1.06005 9.92425 1.10586L5.32995 5.74579C5.2597 5.81682 5.1644 5.85678 5.06499 5.85686L4.93501 5.85686C4.8356 5.85678 4.7403 5.81682 4.67005 5.74579L0.0757474 1.10586C0.0274162 1.06005 -3.7308e-08 0.996086 -3.43819e-08 0.929144C-3.14558e-08 0.862203 0.0274162 0.798243 0.0757475 0.752433L0.605667 0.21725C0.652601 0.169459 0.716492 0.142578 0.78314 0.142578C0.84979 0.142578 0.913679 0.169459 0.960613 0.21725L5 4.29676L9.03939 0.217251Z"
								fill="currentColor" />
						</svg>
					</button>
					<ul class="info-block__dropdown language__dropdown">
						<li class="dropdown__item active language__item">
							<button>English</button>
						</li>
						<li class="dropdown__item language__item">
							<button>Ukrainian</button>
						</li>
						<li class="dropdown__item language__item">
							<button>Polish</button>
						</li>
						<li class="dropdown__item language__item">
							<button>German</button>
						</li>
					</ul>
				</div>
				<div class="copyright">
					© 2022 Bullet beauty. All rights reserved. Powered by Shopify
				</div>
				<div class="footer__payments">
					{% for type in shop.enabled_payment_types %}
						{{ type | payment_type_svg_tag: class: 'payment-icon' }}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</footer>
