<section class="blog-block">
  <div class="blog__container">
    <h2 class="blog__title title">
      {{ section.settings.title }}
    </h2>
    <div class="blog__list swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide blog__item">
            <a href="{{ block.settings.link }}" class="image-block">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '500x' }}" alt="{{ block.settings.title }}">
              {% endif %}
            </a>
            <a href="{{ block.settings.link }}" class="blog-item__title">
              {{ block.settings.title }}
            </a>
            <p class="blog-item__date">
              {{ block.settings.date }}
            </p>
            <p class="blog-item__desc">
              {{ block.settings.description }}
            </p>
            <a href="{{ block.settings.link }}" class="blog-item__more link">
              {{ block.settings.read_more_text }}
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Blog Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Blog"
    }
  ],
  "blocks": [
    {
      "type": "blog_post",
      "name": "Blog Post",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Post Title",
          "default": "Blog Title"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "March 25, 2022"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Short Description",
          "default": "Short blog description goes here..."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to full post"
        },
        {
          "type": "text",
          "id": "read_more_text",
          "label": "Button Text",
          "default": "Read More"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Blog Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "blog_post"
        },
        {
          "type": "blog_post"
        },
        {
          "type": "blog_post"
        }
      ]
    }
  ]
}
{% endschema %}
