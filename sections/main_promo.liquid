<section class="promo-block">
  <div class="promo-block__container">
    <div class="promo__video-block">
      <div class="video-block__info">
        <p class="video-block__label">
          {{ section.settings.video_label }}
        </p>
        <h2 class="video-block__title title">
          {{ section.settings.video_title }}
        </h2>
        <p class="video-block__desc">
          {{ section.settings.video_desc }}
        </p>
      </div>
      <div class="video-block__content">
        {% if section.settings.video != blank %}
			<video
				class="new-collection__bg"
				autoplay
				loop
				muted
				playsinline
				poster="{{ section.settings.video.preview_image | img_url: '800x' }}"
			>
				<source src="{{ section.settings.video.sources[0].url }}" type="video/mp4" />
				Oracle Jewelry - Elegance
			</video>
		{% endif %}
        <button class="video-block__play">
          <!-- SVG (залишаємо як є) -->
        </button>
      </div>
    </div>

    <div class="promo-list">
      <!-- Gift card -->
      <div class="promo__list-item gift-card__image">
        <img src="{{ section.settings.gift_image | img_url: '600x' }}" alt="Gift Card">
      </div>
      <div class="promo__list-item gift-card__content">
        <h3 class="gift-card__title title">
          {{ section.settings.gift_title }}
        </h3>
        <p class="gift-card__desc">
          {{ section.settings.gift_desc }}
        </p>
        <form class="gift-card__buy-form">
          <div class="gift-card__price">
            <button type="button" class="price__button">
              <span>{{ section.settings.gift_price_1 }}</span>
            </button>
            <ul class="price__dropdown">
              <li class="price__item active"><button type="button">{{ section.settings.gift_price_1 }}</button></li>
              <li class="price__item"><button type="button">{{ section.settings.gift_price_2 }}</button></li>
              <li class="price__item"><button type="button">{{ section.settings.gift_price_3 }}</button></li>
            </ul>
          </div>
          <button type="submit" class="gift-card__buy-now btn">Buy Now</button>
        </form>
      </div>

      <!-- Sale -->
      <div class="promo__list-item sale__info">
        <h3 class="sale-info__title title">
          {{ section.settings.sale_title }}
        </h3>
        <p class="sale-info__desc">
          {{ section.settings.sale_desc }}
        </p>
        <a href="{{ section.settings.sale_link }}" class="sale-info__shop-now btn">
          {{ section.settings.sale_button_text }}
        </a>
      </div>
      <div class="promo__list-item sale__image">
        <img src="{{ section.settings.sale_image | img_url: '600x' }}" alt="Sale 50%">
      </div>

      <!-- Newsletter -->
      <div class="promo__list-item newsletter__image">
        <img src="{{ section.settings.newsletter_image | img_url: '600x' }}" alt="Newsletter">
      </div>
      <div class="promo__list-item newsletter__info">
        <h3 class="newsletter__title title">
          {{ section.settings.newsletter_title }}
        </h3>
        <p class="newsletter__desc">
          {{ section.settings.newsletter_desc }}
        </p>
        <form class="newsletter__form">
          <input type="email" name="email" id="email" placeholder="Your Email">
          <button type="submit" class="newsletter__submit btn">Subscribe</button>
        </form>
      </div>
    </div>
  </div>
</section>


